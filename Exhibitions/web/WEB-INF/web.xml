<web-app  version="3.0">

  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>ServletName</servlet-name>
    <servlet-class>ua.training.controller.Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletName</servlet-name>
    <url-pattern>/app/*</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>
        ua.training.controller.listeners.SessionListener
    </listener-class>
  </listener>

  <welcome-file-list>
  <welcome-file>index.jsp</welcome-file>
</welcome-file-list>

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ua.training.controller.filters.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LanguageFilter</filter-name>
    <filter-class>ua.training.controller.filters.LocalizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LanguageFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>AuthorizationFilter</filter-name>
    <filter-class>ua.training.controller.filters.AuthorizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthorizationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/WEB-INF/error.jsp</location>
  </error-page>

</web-app>
